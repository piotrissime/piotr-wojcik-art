<style>
  .wrapper {
    max-width: 1140px;
    display: flex;
    flex-direction: column;
    margin-right: auto;
    margin-left: auto;
    position: relative;
  }

  .home-main-content h1 {
    font-size: 4rem;
    margin-bottom: 0;
  }
  .home-main-content p {
    margin-top: 0;
    font-size: 2rem;
  }
  .home-main-content {
    padding: 0 50px;
  }

  .hero {
    position: relative;
  }

  .hero__text {
    position: absolute;
    top: -100px;
    left: 15px;
    margin-top: 42px;
  }

  .hero h1 {
    margin-top: 0;
  }

  .hero__image {
    margin-top: 70px;
    margin-bottom: 45px;
    display: flex;
    justify-content: center;
    overflow: hidden;
  }

  .hero__image img {
    width: 580px;
    box-shadow: 6px 7px 9px -7px rgba(59, 59, 59, 0.75);
  }

  /* About section */
  .about p {
    font-size: 1.3rem;
  }

  .about-container-1 {
    /* Makes a "block formatting context" to force the parent element to contain Its child elements. */
    overflow: hidden;
  }
  .about-container-2 {
    margin-top: 20px;
    overflow: hidden;
  }

  .about__picture-1,
  .about__picture-2 {
    height: 300px;
  }

  .about__picture-1 {
    float: left;
    margin-right: 15px;
  }
  .about__picture-2 {
    float: right;
    margin-left: 15px;
  }

  /* Responsive mode */

  @media all and (max-width: 800px) {
    /* About section */
    .about-container-1,
    .about-container-2 {
      display: flex;
      flex-direction: column;
    }
    .about__picture-1,
    .about__picture-2 {
      object-fit: cover;
      margin-bottom: 10px;
    }

    /* Main section */
    .home-main-content {
      padding: 0 12px;
    }
  }
</style>
